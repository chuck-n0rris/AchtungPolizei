<Window x:Class="AchtungPolizei.Tray.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Settings" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
              
        <TextBlock Text="Achtung Polizei" FontSize="22" Foreground="#FFFF4E00" />
        <ListBox Grid.Row="1" ItemsSource="{Binding Projects}" >
            
        </ListBox>

        <StackPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0 10 0 0" Orientation="Horizontal" >
            <Button Content="Add Prject" Click="AddProjectClick" />
            <Button Margin="10 0 0 0" Content="Close" />             
        </StackPanel>
        
    </Grid>
</Window>
